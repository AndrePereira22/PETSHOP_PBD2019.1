<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="PBD" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>br.com.pbd.Modelo.Agenda</class>
    <class>br.com.pbd.Modelo.Animal</class>
    <class>br.com.pbd.Modelo.Caixa</class>
    <class>br.com.pbd.Modelo.Cliente</class>
    <class>br.com.pbd.Modelo.Dados</class>
    <class>br.com.pbd.Modelo.Especie</class>
    <class>br.com.pbd.Modelo.Fornecedor</class>
    <class>br.com.pbd.Modelo.Funcionario</class>
    <class>br.com.pbd.Modelo.GrupoProduto</class>
    <class>br.com.pbd.Modelo.ItemVenda</class>
    <class>br.com.pbd.Modelo.Login</class>
    <class>br.com.pbd.Modelo.Loja</class>
    <class>br.com.pbd.Modelo.Pagamento</class>
    <class>br.com.pbd.Modelo.Parcela</class>
    <class>br.com.pbd.Modelo.Produto</class>
    <class>br.com.pbd.Modelo.Profissional</class>
    <class>br.com.pbd.Modelo.Raca</class>
    <class>br.com.pbd.Modelo.Servico</class>
    <class>br.com.pbd.Modelo.Venda</class>
    <properties>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/petshop"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="glenda"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
